{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node",
      "jest"
    ],
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
